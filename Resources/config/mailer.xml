<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_person.contact.email.template">BlackPersonBundle:Contact:email.txt.twig</parameter>
    </parameters>

    <services>
        <service id="black_person.mailer.default" class="Black\Bundle\PersonBundle\Mailer\Mailer" public="false">
            <argument type="service" id="mailer" />
            <argument type="service" id="twig" />
            <argument type="service" id="black_config.manager.config" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="contact">%black_person.contact.email.template%</argument>
                </argument>
            </argument>
        </service>
    </services>

</container>
