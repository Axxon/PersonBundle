<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <services>
        <service id="black_person.person.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form" scope="request">
            <argument>%black_person.person.form.name%</argument>
            <argument type="service" id="black_person.person.form.type" />
            <argument>null</argument>
        </service>

        <service id="black_person.person.form.type" class="%black_person.person.form.type%" scope="request">
            <argument>%black_person.db_driver%</argument>
            <argument>%black_person.person.model.class%</argument>
            <argument type="service" id="black_admin.form.event.button" />
            <tag name="form.type" alias="black_person_person" />
        </service>

        <service id="black_person.person.form.handler" class="%black_person.person.form.handler%" scope="request" public="true">
            <argument type="service" id="black_person.person.form" />
            <argument type="service" id="black_person.manager.person" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
            <argument type="service" id="security.context" />
        </service>
        
        <service id="black_person.person.model.class" class="%black_person.person.model.class%" public="true" />

        <service id="black_person.person.form.gender_list" class="%black_person.person.form.gender_list%" public="false" />
        
        <service id="black_person.person.form.gender_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_person.person.form.gender_list" />
            <argument>black_person_choice_list_gender</argument>
            <tag name="form.type" alias="black_person_choice_list_gender" />
        </service>

        <service id="black_person.person.form.honorific_prefix_list" class="%black_person.person.form.honorific_prefix_list%" public="false" />
        
        <service id="black_person.person.form.honorific_prefix_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_person.person.form.honorific_prefix_list" />
            <argument>black_person_choice_list_honorific_prefix</argument>
            <tag name="form.type" alias="black_person_choice_list_honorific_prefix" />
        </service>

        <service id="black_person.person.form.person_list" class="%black_person.person.form.person_list%" public="false" >
            <argument type="service" id="black_person.manager.person" />
        </service>
        
        <service id="black_person.person.form.person_double_box_type" class="Black\Bundle\AdminBundle\Form\Type\CustomDoubleBoxType" public="true">
            <argument type="service" id="black_person.person.form.person_list" />
            <argument>black_person_double_box_person</argument>
            <tag name="form.type" alias="black_person_double_box_person" />
            <call method="setManager">
                <argument type="service" id="black_person.manager.person" />
            </call>
        </service>
        
        <service id="black_person.person.form.person_choice_list_type" class="Black\Bundle\CommonBundle\Form\Type\CustomChoiceListType" public="true">
            <argument type="service" id="black_person.person.form.person_list" />
            <argument>black_person_choice_list_person</argument>
            <tag name="form.type" alias="black_person_choice_list_person" />
            <call method="setManager">
                <argument type="service" id="black_person.manager.person" />
            </call>
        </service>
    </services>
</container>
