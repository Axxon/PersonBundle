<script type="text/javascript">
    var black_person_person_form_contactPointsOld;
    function black_person_person_form_contactPointsIntegrity() {
        jQuery('#black_person_person_form_contactPoints div:first-child div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() !== 'P' && $(value).val() !== '') {
                $(value).remove();
            }
        });
        var contactPointsFound = 0;
        jQuery('#black_person_person_form_contactPoints div:first-child div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() === 'P') {
                contactPointsFound++;
            }
        });
        if(contactPointsFound === 0) {
            jQuery('#black_person_person_form_contactPoints div:first-child div.field1 div.grid9 select').append(black_person_person_form_contactPointsOld);
        }
        jQuery('#black_person_person_form_contactPoints div:not(:first-child) div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() === 'P') {
                black_person_person_form_contactPointsOld = $(value);
                $(value).remove();
            }
        });
    }

