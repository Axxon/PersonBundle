{% set mail = mail is defined ? true : false %}
{% set currentPath = '' %}

{#  Secondary nav  #}
<div class="secNav">
    <div class="secWrapper">
        <div class="secTop">
            <div class="balance">
                <div class="balInfo">{% trans from "views" %}person.admin.sidebar.person.text{% endtrans %}</div>
            </div>
        </div>

        {#  Tabs container  #}
        <div id="tab-container" class="tab-container">

            <ul class="iconsLine ic3 etabs" style="display: none;">
                <li><a href="#general" title=""><span class="icos-fullscreen"></span></a></li>
                <li><a href="#alt1" title=""><span class="icos-user"></span></a></li>
                <li><a href="#alt2" title=""><span class="icos-archive"></span></a></li>
            </ul>

            <div class="divider"><span></span></div>


            <div id="general">
                <ul class="subNav">
                    <li>
                        <a href="{{ path('admin_persons') }}" title="{% trans from "views" %}person.admin.sidebar.person.a.title{% endtrans %}" {% if currentPath == path('admin_persons') %}class="this"{% endif %}>
                            <span class="icos-list2"></span>{% trans from "views" %}person.admin.sidebar.person.a.text{% endtrans %}
                        </a>
                    </li>
                </ul>
            </div>

        </div>
        {% if mail and document.email %}

        <div class="divider"><span></span></div>

        <div class="widget">
            <div class="body">
                <div class="messageTo">
                    <span>{% trans from "views" %}person.admin.sidebar.person.mail.text{% endtrans %}<strong> {{ document.givenName }}</strong></span>
                </div>

                <form id="validate" class="main" action="{{ path('admin_sendmail') }}" method="post" {{ form_enctype(form) }}>
                    {% form_theme form 'BlackAdminBundle:AdminForm:fields.html.twig' %}
                    {{ form_rest(form) }}

                    <div class="mesControls">
                        <input type="submit" name="sendMessage" class="buttonS bLightBlue" value="{% trans from "form"  %}person.admin.sidebar.mail.submit.value{% endtrans %}">
                    </div>
                </form>
                <div style="position: absolute; display: none; word-wrap: break-word; white-space: pre-wrap; border: 1px solid rgb(215, 215, 215); font-weight: normal; width: 363px; font-family: Arial, Helvetica, sans-serif; line-height: normal; font-size: 11px; padding: 6px 7px;">&nbsp;</div></div>
        </div>
        {% endif %}

    </div>
    <div class="clear"></div>
</div>
</div>
{#  Sidebar ends  #}